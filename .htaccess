DirectoryIndex index.php
 <IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond $1 !^(index\.php|upload|robots\.txt)
    RewriteRule ^(.*)$ index.php?/$1 [L]
 </IfModule>
 <IfModule mod_php5.c>
    php_flag display_errors On
 </IfModule>